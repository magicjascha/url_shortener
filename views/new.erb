<form action="/shortcuts" method="post">
  <input type="text" name="long_url">
  <input type="submit" value="submit" >
</form>

<% if @shortcuts %>
  <h2>Recently added by you<h2>
    <table>
      <tr>
        <th>Long Url</th>
        <th>Short Url</th>
      </tr>
      <% @shortcuts.each do |k,v| %>
        <tr>
          <td><%= v %></td>
          <td><a href="<%= k %>"><%= k %></a></td>
        </tr>
      <% end %>
    </table>
<% end %>